# Auto detect text files and perform LF normalization
* text=auto

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Documents
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary

# Archives
*.zip binary
*.tar.gz binary
*.rar binary
*.7z binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Audio/Video
*.mp3 binary
*.mp4 binary
*.avi binary
*.mov binary
*.wav binary

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf

# Web
*.html text
*.css text
*.js text
*.json text
*.xml text
*.txt text
*.md text

# Config files
*.yml text
*.yaml text
*.toml text
*.ini text
*.cfg text
*.conf text

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore 